<div class="row">
  <div class="col-md-12">
    {{!-- <h2>Categories</h2> --}}
    <h2><a href="/categories/add" class="btn btn-success">Add Category</a></h2>
    <hr />
    <div class="table-responsive">
      <table class="table" style="background-color:rgb(255, 254, 254); color:black">
        <thead>
          <tr>
            <th>Column ID</th>
            <th>Category Name</th>
            <th>Remove</th>

          </tr>
        </thead>
        <tbody>
          {{#each info}}
          <tr>
            <td><a href="/posts?category={{id}}">{{id}}</a></td>
            <td><a href="/posts?category={{id}}">{{category}}</a></td>
            <td><a href="/categories/delete?id={{id}}"><button class="btn btn-danger">Remove</button></a></td>
          </tr>
          {{else}}
          <tr>
            <td colspan="8"></td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

  </div>
  {{#unless posts}}
  <div class="col-md-12 text-center">
    <strong>{{message}}</strong>
  </div>
  {{/unless}}
</div>